<div class="u-margin-all-m"><h2>Senza datepicker</h2></div>

<div class="u-margin-all-m">

  <form class="Form Form--spaced u-padding-all-xl u-background-grey-10 u-text-r-xs u-layout-prose">
    <fieldset class="Form-fieldset">

      <legend class="Form-legend">Data di nascita</legend>

      <div class="Grid Grid--fit Grid--withGutter">

        <div class="Form-field Form-field--date Grid-cell">
          <label class="Form-label is-required" for="giorno">Giorno</label>
          <input class="Form-input u-text-r-s u-borderRadius-m" id="giorno"
                aria-required="true" required value="" type="number" 
                pattern="0?[1-9]|1[0-9]|2[0-9]|3[01]" min="1" max="31">
        </div>

        <div class="Form-field Form-field--date Grid-cell">
          <label class="Form-label is-required" for="mese">Mese</label>
          <input class="Form-input u-text-r-s u-borderRadius-m" id="mese"
                aria-required="true" required value="" type="number" 
                pattern="0?[1-9]|1[012]" min="1" max="12">
        </div>

        <div class="Form-field Form-field--date Grid-cell">
          <label class="Form-label is-required" for="anno">Anno</label>
          <input class="Form-input u-text-r-s u-borderRadius-m" id="anno"
                aria-required="true" required value="" type="number"
                pattern="[0-9]{4}" min="1900" max="2010">
        </div>

      </div>
      
    </fieldset>
  </form>

</div>

<div class="u-margin-all-m"><h2>Con datepicker</h2></div>

<div class="u-margin-all-m">

  <form class="Form Form--spaced u-padding-all-xl u-background-grey-10 u-text-r-xs u-layout-prose">
    <fieldset class="Form-fieldset">
    
      <legend class="Form-legend">Fissa la data per l'appuntamento</legend>

      <div class="Form-field Form-field--datePopup">
        
        <label class="Form-label is-required" for="datePopup">Data (gg/mm/aaaa)</label>
        
        <div class="Grid Grid--alignMiddle Grid--fit Grid--withGutter">
          
          <div class="Grid-cell u-size10of12">
            <input class="Form-input u-text-r-s u-borderRadius-m" id="datePopup" aria-required="true" required type="date" value="">
          </div>
          
          <div class="Grid-cell u-size2of12">
            <button type="button" class="Form-field--datePopup-trigger" id="datePopupTrigger" aria-describedby="appointment_date">
              <span class="u-hiddenVisually">Seleziona data</span>
              <span class="Icon-calendar u-text-r-l"></span>
            </button>
          </div>
        
        </div>
      </div>

    </fieldset>
  </form>

</div>
