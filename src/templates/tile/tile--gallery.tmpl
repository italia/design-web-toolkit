<div class="u-color-grey-30">
  <figure>
    <a href="#img-{{ index }}" aria-labelledby="desc-{{ index }}" class="u-block u-padding-all-xxs">
      <img src="//placehold.it/370x205?text={{ index }}" class="u-sizeFull" alt="" />
    </a>
    <figcaption class="u-padding-r-top">
      <p class="u-color-teal-50 u-text-r-xxs u-textWeight-700 u-padding-bottom-s">Foto</p>
      <div class="Grid">
        <span class="Grid-cell u-sizeFit Icon-camera u-color-white u-floatLeft u-text-r-l" aria-hidden="true"></span>
        <h3 id="desc-{{ index }}" class="Grid-cell u-sizeFill u-padding-left-s u-lineHeight-l u-color-white u-text-r-xs u-textWeight-700">
          {{ text | d(__SHORT_TEXTS__[0]) }}
        </h3>
      </div>
    </figcaption>
  </figure>
</div>
